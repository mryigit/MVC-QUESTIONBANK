<form id="frmAddFilter">
    <div class="form-horizontal">
        <h4>Filtre</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Soru Sayısı", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.Editor("txtQuestionCount", new { htmlAttributes = new { @class = "form-control", @data_val = "true", @data_val_required = "Bu alan boş bırakılamaz.", @type = "number", @min=1, @data_msg_min = "Girilen rakam 0'dan büyük olmalı" } })
                @Html.ValidationMessage("txtQuestionCount", "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.Label("Seçenek Sayısı", htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.Editor("txtQuestionOptionCount", new { htmlAttributes = new { @class = "form-control", @type = "number", @min = 1, @data_msg_min = "Girilen rakam 0'dan büyük olmalı" } })
                @Html.ValidationMessage("txtQuestionOptionCount", "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            @Html.Label("", "Eğitim Programı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EducationProgramID", null, htmlAttributes: new { @class = "form-control", @id = "ddlEducationProgram", @onchange = "fillLessonDropDown()" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("", "Ders", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LessonID", null, htmlAttributes: new { @class = "form-control", @id = "ddlLesson", @onchange = "fillSubjectDropDown()" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("", "Konu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control", @id = "ddlSubject" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("", "Zorluk Derecesi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DifficultyID", null, htmlAttributes: new { @class = "form-control", @id = "ddlDifficulty" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("", "Soru Tipi", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("QuestionTypeID", null, htmlAttributes: new { @class = "form-control", @id = "ddlQuestionType" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("", "Dil", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LanguageID", null, htmlAttributes: new { @class = "form-control", @id = "ddlLanguage" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" id="btnDifficultySubmit" />
            </div>
        </div>
    </div>

</form>

